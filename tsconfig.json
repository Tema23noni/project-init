{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "preserve",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "types": ["vite/client", "node"],
        "strict": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "noEmit": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.vue"]
}
